<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GeeksEmpire.Theme" parent="Theme.Material3.Light.NoActionBar">

        <item name="android:colorPrimary">@color/primaryColorPurple</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:colorAccent">@color/primaryColorPurple</item>

        <item name="colorPrimary">@color/primaryColorPurple</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/primaryColorPurple</item>

        <item name="android:windowBackground">@color/primaryColorPurple</item>

        <item name="android:navigationBarColor">@color/primaryColorPurple</item>
        <item name="android:statusBarColor">@color/primaryColorPurple</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>

        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="LinkClick">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:linksClickable">true</item>
        <item name="android:autoLink">web</item>
    </style>

</resources>